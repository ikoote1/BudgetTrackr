<div id="<%= dom_id transaction %>">
  <p>
    <strong>Name:</strong>
    <%= transaction.name %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= transaction.amount %>
  </p>

  <p>
    <strong>Categories:</strong>
    <% if transaction.categories.any? %>
      <%= transaction.categories.map(&:name).join(', ') %>
    <% else %>
      No categories assigned
    <% end %>
  </p>

</div>
